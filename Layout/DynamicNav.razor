<RadzenSidebar @bind-Expanded="@sidebarExpanded">
    <RadzenPanelMenu>
        @foreach (var entry in Navigation)
        {
            @if (entry.Children?.Any(c => c.Section == "main" && !c.Hidden) == true)
            {
                <RadzenPanelMenuItem Text="@entry.Title" Icon="home">
                    @foreach (var child in entry.Children.Where(c => c.Section == "main" && !c.Hidden).OrderBy(c => c.Order))
                    {
                        <RadzenPanelMenuItem Text="@child.Title" Icon="chevron_right" Path="@($"/{Tenant}/content/{child.Slug}")" />
                    }
                </RadzenPanelMenuItem>
            }
            else
            {
                <RadzenPanelMenuItem Text="@entry.Title" Icon="home" Path="@($"/{Tenant}/content/{entry.Slug}")" />
            }
        }
    </RadzenPanelMenu>
</RadzenSidebar>

@inherits LayoutComponentBase
<HeadContent>
    <RadzenTheme Theme="material" />
</HeadContent>
<RadzenComponents />
<RadzenLayout>
    <RadzenHeader>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
            <RadzenSidebarToggle Click="@(() => sidebarExpanded = !sidebarExpanded)" />
            <RadzenLabel Text="STC STORB Consulting" />
        </RadzenStack>
    </RadzenHeader>
    <RadzenSidebar Responsive="false" Style="width: max-content">
        <RadzenPanelMenu DisplayStyle="@(sidebarExpanded ? MenuItemDisplayStyle.IconAndText : MenuItemDisplayStyle.Icon)" ShowArrow="false">
            <RadzenPanelMenuItem Text="Dashboard" Icon="dashboard" Path="/"/>
            <RadzenPanelMenuItem Text="Fundamentals" Icon="auto_awesome">
                <RadzenPanelMenuItem Text="Counter" Icon="color_lens" Path="counter" />
                <RadzenPanelMenuItem Text="Weather" Icon="invert_colors" Path="weather"/>
            </RadzenPanelMenuItem>
        </RadzenPanelMenu>
    </RadzenSidebar>
    <RadzenBody>
        <div class="rz-p-4">
            @Body
        </div>
    </RadzenBody>
    <RadzenFooter>
        &copy; 2025 STC STORB Consulting
    </RadzenFooter>
</RadzenLayout>


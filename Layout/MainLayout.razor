@inherits LayoutComponentBase

<HeadContent>
    <RadzenTheme Theme="material" />
</HeadContent>

<RadzenComponents />

<HeadContent>
    <RadzenTheme Theme="material" />
</HeadContent>

<RadzenLayout>

    <RadzenHeader>
        <RadzenStack Orientation="Orientation.Horizontal"
                     AlignItems="AlignItems.Center"
                     JustifyContent="JustifyContent.SpaceBetween"
                     Class="w-100 rz-p-2">

            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center">
                <RadzenSidebarToggle Click="@(() => sidebarExpanded = !sidebarExpanded)" />
                <RadzenLabel Text="STC STORB Consulting" Class="rz-ml-3 rz-text-nowrap" />
            </RadzenStack>

            <RadzenMenu Orientation="Orientation.Horizontal">
                <RadzenMenuItem Text="DataGrid Demo" Path="/weather" Icon="grid_on" />
                <RadzenMenuItem Text="Contact" Path="/contact" Icon="mail" />

                <RadzenMenuItem Text="Account" Icon="account_circle">
                    <RadzenMenuItem Text="Profile" Path="/profile" />
                    <RadzenMenuItem Text="Settings" Path="/settings" />
                    <RadzenMenuItem Text="Logout" Path="/logout" />
                </RadzenMenuItem>
            </RadzenMenu>

        </RadzenStack>
    </RadzenHeader>

    <RadzenSidebar @bind-Expanded="@sidebarExpanded">
        <RadzenPanelMenu>
            <RadzenPanelMenuItem Text="Home" Icon="home" Path="/" />

            <RadzenPanelMenuItem Text="Counter" Icon="exposure_plus_1" Path="/counter" />

            <RadzenPanelMenuItem Text="Weather" Icon="cloudy_snowing" Path="/weather" />
        </RadzenPanelMenu>
    </RadzenSidebar>

    <RadzenBody>
        <div class="rz-p-4">
            @Body
        </div>
    </RadzenBody>

    <RadzenFooter>
        <div class="text-center rz-p-2">
            &copy; @DateTime.Now.Year STC STORB Consulting auf GitHub Pages
        </div>
    </RadzenFooter>

</RadzenLayout>

